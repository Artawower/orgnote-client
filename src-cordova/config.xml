<?xml version='1.0' encoding='utf-8'?>
<widget id="org.note.app" version="0.14.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OrgNote</name>
    <description>OrgNote app. OrgNote is a note-taking app for organizing your thoughts and ideas. It is based on the emacs org-roam package and org-mode format.</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="orgnote://*/*" />
    <allow-navigation href="about:*" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="ldpi" foreground="res/android/ldpi.png" src="res/android/ldpi.png" />
        <icon background="@color/background" density="mdpi" foreground="res/android/mdpi.png" src="res/android/mdpi.png" />
        <icon background="@color/background" density="hdpi" foreground="res/android/hdpi.png" src="res/android/hdpi.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/android/xhdpi.png" src="res/android/xhdpi.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/android/xxhdpi.png" src="res/android/xxhdpi.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/android/xxxhdpi.png" src="res/android/xxxhdpi.png" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/unicorn.png" />
        <preference name="AndroidWindowSplashScreenBackgroundColor" value="@color/background" />
        <preference name="AndroidWindowSplashScreenScaleType" value="centerCrop" />
        <splash density="land-ldpi" src="res/screen/android/splash-land-ldpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-land-mdpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-land-xhdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="land-xxhdpi" src="res/screen/android/splash-land-xxhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/splash-land-xxxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon background="@color/background" foreground="res/ios/icon.png" height="57" src="res/ios/icon.png" width="57" />
        <icon background="@color/background" foreground="res/ios/icon@2x.png" height="114" src="res/ios/icon@2x.png" width="114" />
        <icon background="@color/background" foreground="res/ios/icon-20@2x.png" height="40" src="res/ios/icon-20@2x.png" width="40" />
        <icon background="@color/background" foreground="res/ios/icon-20@3x.png" height="60" src="res/ios/icon-20@3x.png" width="60" />
        <icon background="@color/background" foreground="res/ios/icon-29.png" height="29" src="res/ios/icon-29.png" width="29" />
        <icon background="@color/background" foreground="res/ios/icon-29@2x.png" height="58" src="res/ios/icon-29@2x.png" width="58" />
        <icon background="@color/background" foreground="res/ios/icon-29@3x.png" height="87" src="res/ios/icon-29@3x.png" width="87" />
