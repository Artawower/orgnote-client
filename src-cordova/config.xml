<?xml version='1.0' encoding='utf-8'?>
<widget id="org.note.app" version="0.11.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OrgNote</name>
    <description>Org Note client for eponymous service</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="about:*" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="ldpi" foreground="res/android/ldpi.png" />
        <icon background="@color/background" density="mdpi" foreground="res/android/mdpi.png" />
        <icon background="@color/background" density="hdpi" foreground="res/android/hdpi.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/android/xhdpi.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/android/xxhdpi.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/android/xxxhdpi.png" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/unicorn.png" />
        <preference name="AndroidWindowSplashScreenBackgroundColor" value="@color/background" />
        <preference name="AndroidWindowSplashScreenScaleType" value="centerCrop" />
    </platform>
    <platform name="ios">
        <icon background="@color/background" foreground="res/ios/icon.png" height="57" width="57" />
        <icon background="@color/background" foreground="res/ios/icon@2x.png" height="114" width="114" />
        <icon background="@color/background" foreground="res/ios/icon-20@2x.png" height="40" width="40" />
        <icon background="@color/background" foreground="res/ios/icon-20@3x.png" height="60" width="60" />
        <icon background="@color/background" foreground="res/ios/icon-29.png" height="29" width="29" />
        <icon background="@color/background" foreground="res/ios/icon-29@2x.png" height="58" width="58" />
        <icon background="@color/background" foreground="res/ios/icon-29@3x.png" height="87" width="87" />
        <icon background="@color/background" foreground="res/ios/icon-40@2x.png" height="80" width="80" />
        <icon background="@color/background" foreground="res/ios/icon-60@2x.png" height="120" width="120" />
        <icon background="@color/background" foreground="res/ios/icon-60@3x.png" height="180" width="180" />
        <icon background="@color/background" foreground="res/ios/icon-20.png" height="20" width="20" />
        <icon background="@color/background" foreground="res/ios/icon-40.png" height="40" width="40" />
        <icon background="@color/background" foreground="res/ios/icon-50.png" height="50" width="50" />
        <icon background="@color/background" foreground="res/ios/icon-50@2x.png" height="100" width="100" />
        <icon background="@color/background" foreground="res/ios/icon-72.png" height="72" width="72" />
        <icon background="@color/background" foreground="res/ios/icon-72@2x.png" height="144" width="144" />
        <icon background="@color/background" foreground="res/ios/icon-76.png" height="76" width="76" />
        <icon background="@color/background" foreground="res/ios/icon-76@2x.png" height="152" width="152" />
        <icon background="@color/background" foreground="res/ios/icon-83.5@2x.png" height="167" width="167" />
        <icon background="@color/background" foreground="res/ios/icon-1024.png" height="1024" width="1024" />
        <icon background="@color/background" foreground="res/ios/icon-24@2x.png" height="48" width="48" />
        <icon background="@color/background" foreground="res/ios/icon-27.5@2x.png" height="55" width="55" />
        <icon background="@color/background" foreground="res/ios/icon-44@2x.png" height="88" width="88" />
        <icon background="@color/background" foreground="res/ios/icon-86@2x.png" height="172" width="172" />
        <icon background="@color/background" foreground="res/ios/icon-98@2x.png" height="196" width="196" />
        <splash src="res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comcom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anycom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~comany.png" />
    </platform>
</widget>
