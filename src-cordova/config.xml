        <icon background="@color/background" foreground="res/ios/icon-50@2x.png" height="100" src="res/ios/icon-50@2x.png" width="100" />
        <icon background="@color/background" foreground="res/ios/icon-72.png" height="72" src="res/ios/icon-72.png" width="72" />
